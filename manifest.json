{
  "manifest_version": 3,
  "name": "My Private Extension",
  "version": "1.2",
  "description": "A private extension for my web app",
  "permissions": ["activeTab", "storage", "downloads", "notifications"],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "update_url": "https://lukaszsiepsiak.github.io/myExtension/update.xml",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src https://* http://* data:"
  }
}
